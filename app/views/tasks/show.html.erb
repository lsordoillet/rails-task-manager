<h2><%= @task.title %></h2>
<h3><%= @task.details %></h3>
<p><%= @task.completed %></p>


<%= link_to "Edit the task", edit_task_path(@task) %>
<%= link_to "See all task", tasks_path %>


<%= link_to "Delete #{@task.name}",
            restaurant_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
